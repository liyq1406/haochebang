<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:background="@drawable/ll_bg_bluetooth_selector"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ll_bluetooth_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/ll_color_tx6"
        android:textSize="@dimen/ll_casher_text_size_14" />

    <TextView
        android:id="@+id/ll_bluetooth_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/ll_color_tx6"
        android:textSize="@dimen/ll_casher_text_size_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/ll_color_tx1" />

</LinearLayout>