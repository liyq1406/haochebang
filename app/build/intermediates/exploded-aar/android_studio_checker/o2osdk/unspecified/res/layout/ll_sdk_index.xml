<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/ll_color_tx1"
    android:orientation="vertical" >

    <include layout="@layout/ll_common_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/ll_color_tx13"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/ll_casher_text_size_12"
            android:layout_marginTop="@dimen/ll_casher_text_size_14"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ll_index_money_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ll_casher_text_size_10"
                android:text="@string/ll_index_pay_text"
                android:textColor="@color/ll_color_tx3"
                android:textSize="@dimen/ll_casher_text_size_16" />

            <TextView
                android:id="@+id/ll_index_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/ll_casher_text_size_10"
                android:layout_weight="1"
                android:gravity="right|center"
                android:textColor="@color/ll_color_tx6"
                android:textSize="@dimen/ll_casher_text_size_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/ll_casher_text_size_10"
                android:text="@string/ll_index_pay_yuan"
                android:textColor="@color/ll_color_tx3"
                android:textSize="@dimen/ll_casher_text_size_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/ll_casher_text_size_10"
            android:layout_marginRight="@dimen/ll_casher_text_size_10"
            android:background="@drawable/ll_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ll_casher_text_size_10"
            android:layout_marginTop="@dimen/ll_casher_text_size_14"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ll_index_payment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:text="@string/ll_index_payment_text"
                android:textColor="@color/ll_color_tx3"
                android:textSize="@dimen/ll_casher_text_size_16" />

            <TextView
                android:id="@+id/ll_index_payment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/ll_color_tx6"
                android:textSize="@dimen/ll_casher_text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ll_casher_text_size_12"
            android:layout_marginRight="@dimen/ll_casher_text_size_10"
            android:layout_marginTop="@dimen/ll_casher_text_size_14"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="5dp"
                android:text="@string/ll_index_goods_text"
                android:textColor="@color/ll_color_tx3"
                android:textSize="@dimen/ll_casher_text_size_16" />

            <TextView
                android:id="@+id/ll_index_goods"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/ll_color_tx6"
                android:textSize="@dimen/ll_casher_text_size_16" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/ll_layout_preauth"
        layout="@layout/ll_sdk_index_preauth"
        android:visibility="gone" />

    <include
        android:id="@+id/ll_layout_not_preauth" 
        layout="@layout/ll_sdk_index_not_preauth" />

        <TextView
            android:id="@+id/ll_index_call"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/ll_casher_text_size_20"
            android:layout_marginTop="@dimen/ll_casher_text_size_12"
            android:gravity="center"
            android:textColor="@color/ll_color_tx3"
            android:textSize="@dimen/ll_casher_text_size_12" />

</LinearLayout>