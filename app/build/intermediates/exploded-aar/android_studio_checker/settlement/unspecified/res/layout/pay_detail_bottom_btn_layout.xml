<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_50dp"
        android:layout_weight="2"
        android:background="@color/pay_white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余应收款"
            android:textColor="@color/pay_red"
            android:textSize="@dimen/hc_text_size_middle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/height_2dp"
            android:text="￥"
            android:textColor="@color/pay_red"
            android:textSize="@dimen/hc_text_size_normal" />

        <TextView
            android:id="@+id/tv_settlement_remaind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/pay_red"
            android:textSize="@dimen/hc_text_size_xlarge" />
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/pay_divider_line" />


    <TextView
        android:id="@+id/tv_settlement_commit"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="@dimen/margin_50dp"
        android:layout_weight="1"
        android:background="@drawable/pay_selector_red_turn_deep"
        android:gravity="center"
        android:text="支付"
        android:textColor="@color/pay_white"
        android:textSize="@dimen/hc_text_size_middle" />

</LinearLayout>