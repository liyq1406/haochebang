<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="10dp"
              android:layout_marginBottom="10dp"
              android:background="@color/self_white"
              android:orientation="horizontal">

    <RadioGroup
        style="@style/wh_mw"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_view_report"
            style="@style/hc_tv_transaction_detail"
            android:drawableTop="@drawable/ic_report"
            android:text="@string/hc_see_report"
            />

        <RadioButton
            android:id="@+id/rb_attention"
            style="@style/hc_tv_transaction_detail"
            android:drawableTop="@drawable/ic_attention"
            android:text="@string/attention"/>

        <RadioButton
            style="@style/hc_tv_transaction_detail"
            />
    </RadioGroup>

</LinearLayout>