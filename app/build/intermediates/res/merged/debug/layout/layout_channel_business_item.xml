<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hc_self_white"
    android:descendantFocusability="blocksDescendants">
    <!--我的客户列表Item-->
    <!--app:cardElevation="0px"设置后不会有阴影效果-->
    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/self_white"
        app:cardElevation="0px"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_business_name"
                style="@style/hc_tv_title"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/margin_15dp"
                android:paddingTop="@dimen/margin_15dp"
                android:singleLine="true"
                android:text="---"
                android:textColor="@color/hc_self_black"
                android:textSize="@dimen/margin_16dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_contact_name"
                    style="@style/hc_tv_name"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="@dimen/height_10dp"
                    android:paddingLeft="@dimen/margin_15dp"
                    android:paddingRight="@dimen/margin_15dp"
                    android:paddingTop="@dimen/height_10dp"
                    android:text="---"
                    android:textSize="@dimen/hc_text_size_normal"/>

                <TextView
                    android:id="@+id/tv_contact_phone"
                    style="@style/hc_tv_phone"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_5dp"
                    android:padding="@dimen/height_10dp"
                    android:text="----"
                    android:textColorLink="@color/hc_indicator"
                    android:textSize="@dimen/hc_text_size_normal"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_business_address_label"
                    style="@style/hc_tv_title"
                    android:layout_alignParentLeft="true"
                    android:text="@string/hc_business_address"/>

                <TextView
                    android:id="@+id/tv_business_address"
                    style="@style/hc_tv_desc"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_business_address_label"
                    android:gravity="right"
                    android:text="------"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_business_maintain_time_label"
                    style="@style/hc_tv_title"
                    android:layout_alignParentLeft="true"
                    android:text="@string/hc_business_maintain_time"/>

                <TextView
                    android:id="@+id/tv_business_maintain_time"
                    style="@style/hc_tv_desc"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_business_maintain_time_label"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="------"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_business_sell_car_label"
                    style="@style/hc_tv_title"
                    android:layout_alignParentLeft="true"
                    android:text="@string/hc_business_sell_car"/>

                <TextView
                    android:id="@+id/tv_business_sell_car"
                    style="@style/hc_tv_desc"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_business_sell_car_label"
                    android:gravity="right"
                    android:text="-----------"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_business_crm_user_name_label"
                    style="@style/hc_tv_title"
                    android:layout_alignParentLeft="true"
                    android:text="@string/hc_business_crm_user_name"/>

                <TextView
                    android:id="@+id/tv_business_crm_user_name"
                    style="@style/hc_tv_desc"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_business_crm_user_name_label"
                    android:gravity="right"
                    android:text="-----------"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_10dp">

                <TextView
                    android:id="@+id/tv_business_user_remark_label"
                    style="@style/hc_tv_title"
                    android:layout_alignParentLeft="true"
                    android:text="@string/hc_business_user_remark"/>

                <TextView
                    android:id="@+id/tv_business_user_remark"
                    style="@style/hc_tv_desc"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_business_user_remark_label"
                    android:gravity="right"
                    android:text="-----------"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>