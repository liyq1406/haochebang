<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/self_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_vehicle_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/tv_market_condition_title"
        android:paddingBottom="15dp"
        android:textSize="@dimen/hc_text_size_large"
        android:textStyle="bold"
        android:text="---"
        />

    <View style="@style/view_normal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_transaction_section_label"
            style="@style/tv_market_condition_title"
            android:paddingTop="15dp"
            android:layout_alignParentLeft="true"
            android:text="@string/hc_transaction_section"
            />

        <TextView
            android:id="@+id/tv_transaction_section"
            style="@style/tv_market_condition_title"
            android:paddingTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_transaction_section_label"
            android:gravity="right|center_vertical"
            android:textColor="@color/hc_self_red"
            android:textSize="@dimen/hc_text_size_large"
            android:textStyle="bold"
            android:text="---"/>
    </RelativeLayout>

    <View
        style="@style/view_normal"
        android:layout_height="7dp"/>

    <LinearLayout
        android:id="@+id/ll_second_hand_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_newest_market_offer_label"
                style="@style/tv_market_condition_title"
                android:paddingBottom="5dp"
                android:layout_alignParentLeft="true"
                android:text="@string/hc_newest_market_offer"
                />

            <TextView
                android:id="@+id/tv_newest_market_offer"
                style="@style/tv_market_condition_title"
                android:paddingRight="45dp"
                android:paddingBottom="5dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/tv_newest_market_offer_label"
                android:gravity="right"
                android:textStyle="bold"
                android:text="---"/>
        </RelativeLayout>
       <ImageView
           android:layout_width="12dp"
           android:layout_height="15dp"
           android:layout_marginRight="15dp"
           android:layout_gravity="right|center_vertical"
           android:background="@drawable/ic_setting_arrow"
           />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_average_offer_label"
                style="@style/tv_market_condition_title"
                android:paddingTop="5dp"
                android:layout_alignParentLeft="true"
                android:text="@string/hc_average_offer"
                />

            <TextView
                android:id="@+id/tv_average_offer"
                style="@style/tv_market_condition_title"
                android:paddingTop="5dp"
                android:paddingRight="45dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_average_offer_label"
                android:gravity="right"
                android:textStyle="bold"
                android:text="----"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        style="@style/view_normal"
        android:layout_height="7dp"/>

    <LinearLayout
        android:id="@+id/ll_new_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_deal_price_section_label"
                style="@style/tv_market_condition_title"
                android:paddingBottom="5dp"
                android:layout_alignParentLeft="true"
                android:text="@string/hc_deal_price_section"
                />

            <TextView
                android:id="@+id/tv_deal_price_section"
                style="@style/tv_market_condition_title"
                android:paddingBottom="5dp"
                android:paddingRight="45dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_deal_price_section_label"
                android:gravity="right|center_vertical"
                android:textStyle="bold"
                android:text="----"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/ic_setting_arrow"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_transaction_vehicle_label"
                style="@style/tv_market_condition_title"
                android:paddingTop="5dp"
                android:layout_alignParentLeft="true"
                android:text="@string/hc_min_price"
                />

            <TextView
                android:id="@+id/tv_min_price"
                style="@style/tv_market_condition_title"
                android:paddingTop="5dp"
                android:paddingRight="45dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_transaction_vehicle_label"
                android:gravity="right|center_vertical"
                android:textStyle="bold"
                android:text="----"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        style="@style/hc_tv_title"
        android:layout_width="match_parent"
        android:paddingTop="30dp"
        android:background="@color/hc_self_gray_bg"
        android:text="@string/hc_remark_1"/>

    <TextView
        style="@style/hc_tv_title"
        android:layout_width="match_parent"
        android:background="@color/hc_self_gray_bg"
        android:text="@string/hc_remark_2"/>
</LinearLayout>