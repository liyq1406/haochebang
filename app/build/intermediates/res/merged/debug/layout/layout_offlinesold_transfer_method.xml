<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:background="@color/self_white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/self_white"
        android:orientation="vertical">

        <LinearLayout
            style="@style/hc_ll_transfer_info"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_transfer_label"
                style="@style/HCTheme.TextHint.Lable"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/hc_offlinesold_transfer_remark"/>
        </LinearLayout>

        <EditText
            android:id="@+id/ed_transfer_remark"
            style="@style/hc_ed_remark"
            android:hint="@string/hc_offlinesold_transfer_content"
            android:minLines="8"/>
    </LinearLayout>


</LinearLayout>