<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/self_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/height_10dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/hc_self_gray_bg"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_fail"
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/hc_trans_fail_reason"
            />

        <TextView
            android:id="@+id/tv_fail_reason"
            style="@style/hc_tv_desc"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_fail"
            android:gravity="right"
            android:text="------"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/hc_purchasetask_purchase_hope_price"
            />

        <TextView
            android:id="@+id/tv_hope_price"
            style="@style/hc_tv_desc"
            android:layout_alignParentRight="true"
            android:text="------"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/hc_purchasetask_purchase_our_price"
            />

        <TextView
            android:id="@+id/tv_our_price"
            style="@style/hc_tv_desc"
            android:layout_alignParentRight="true"
            android:text="------"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_label_transfer_status"
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/hc_purchasetask_purchase_peer_price"
            />

        <TextView
            android:id="@+id/tv_peer_price"
            style="@style/hc_tv_desc"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_label_transfer_status"
            android:gravity="right"
            android:text="-----------"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/hc_purchasetask_purchase_sell_cycle"
            />

        <TextView
            android:id="@+id/tv_sell_cycle"
            style="@style/hc_tv_desc"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="-----------"/>
    </RelativeLayout>

</LinearLayout>