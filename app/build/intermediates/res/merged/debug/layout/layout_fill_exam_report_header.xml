<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/self_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_info"
            style="@style/btn_fill_exam_report"
            android:background="@drawable/bottom_line_light_blue"
            android:text="信息"
            android:textColor="@color/hc_indicator"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/btn_composite"
            style="@style/btn_fill_exam_report"
            android:text="综合"/>

        <TextView
            android:id="@+id/btn_cabin"
            style="@style/btn_fill_exam_report"
            android:text="机舱"/>

        <TextView
            android:id="@+id/btn_outer"
            style="@style/btn_fill_exam_report"
            android:text="外观"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hc_self_gray_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_inner"
            style="@style/btn_fill_exam_report"
            android:text="内饰"/>

        <TextView
            android:id="@+id/btn_device"
            style="@style/btn_fill_exam_report"
            android:text="设备"/>

        <TextView
            android:id="@+id/btn_start"
            style="@style/btn_fill_exam_report"
            android:text="启动"/>

        <TextView
            android:id="@+id/btn_ask"
            style="@style/btn_fill_exam_report"
            android:text="问答"/>
    </LinearLayout>

</LinearLayout>