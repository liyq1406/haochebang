<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/self_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/height_10dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/hc_self_gray_bg"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_online_time_label"
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/online_time"
            />

        <TextView
            android:id="@+id/tv_online_time"
            style="@style/hc_tv_desc"
            android:layout_toRightOf="@id/tv_online_time_label"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:text="--"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_label_transfer_time"
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/scan_times"
            />

        <TextView
            android:id="@+id/tv_scan_times"
            style="@style/hc_tv_desc"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_label_transfer_time"
            android:gravity="right"
            android:text="--"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_label_transfer_add"
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/call_to_consult"
            />

        <TextView
            android:id="@+id/tv_call_to_consult"
            style="@style/hc_tv_desc"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_label_transfer_add"
            android:gravity="right"
            android:text="--"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_label_transfer_status"
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/door_to_car"
            />

        <TextView
            android:id="@+id/tv_door_to_car"
            style="@style/hc_tv_desc"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_label_transfer_status"
            android:gravity="right"
            android:text="--"/>
    </RelativeLayout>

</LinearLayout>