<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pay_confirm_dialog_bg"
    android:orientation="vertical"
    android:padding="@dimen/margin_25dp">

    <TextView
        android:id="@+id/tv_pospay_cash_confirm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="现金支付"
        android:textColor="@color/pay_self_black"
        android:textSize="@dimen/hc_text_size_large" />

    <TextView
        android:id="@+id/tv_pospay_cash_confirm_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12dp"
        android:drawablePadding="@dimen/margin_15dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/pay_self_black"
        android:textSize="@dimen/hc_text_size_normal" />

    <TextView
        android:id="@+id/tv_pospay_cash_confirm_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12dp"
        android:drawablePadding="@dimen/margin_15dp"
        android:gravity="center"
        android:text="选择现金支付后，将不可修改定金支付方式。"
        android:textColor="@color/pay_self_black"
        android:textSize="@dimen/hc_text_size_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_pospay_cash_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#0000"
            android:text="确定"
            android:textColor="@color/pay_indicator"
            android:textSize="@dimen/hc_text_size_middle" />

        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_pospay_cash_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#0000"
            android:text="取消"
            android:textColor="@color/pay_indicator"
            android:textSize="@dimen/hc_text_size_middle" />

    </LinearLayout>

</LinearLayout>