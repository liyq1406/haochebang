<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/wh_match"
        android:layout_weight="15"
        android:orientation="vertical"
        >
        <LinearLayout
            style="@style/hc_ll_transfer_info"
            android:layout_height="@dimen/height_35dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/HCTheme.TextHint.Lable"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/hc_vehicle_vin"/>

            <EditText
                android:id="@+id/et_vin"
                style="@style/HCTheme.VehicleSubBlock.Input"
                android:maxLength="17"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"/>
        </LinearLayout>

        <LinearLayout
            style="@style/hc_ll_transfer_info"
            android:layout_height="@dimen/height_35dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/HCTheme.TextHint.Lable"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/hc_vehicle_type"/>

            <TextView
                android:id="@+id/tv_vehicle_model"
                style="@style/HCTheme.VehicleSubBlock.Input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"/>
        </LinearLayout>

        <LinearLayout
            style="@style/hc_ll_transfer_info"
            android:layout_height="@dimen/height_35dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/HCTheme.TextHint.Lable"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/hc_owner_name"/>

            <EditText
                android:id="@+id/et_seller_name"
                style="@style/HCTheme.VehicleSubBlock.Input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"/>
        </LinearLayout>

        <LinearLayout
            style="@style/hc_ll_transfer_info"
            android:layout_height="@dimen/height_35dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/HCTheme.TextHint.Lable"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/hc_owner_phone"/>

            <EditText
                android:id="@+id/et_seller_phone"
                style="@style/HCTheme.VehicleSubBlock.Input"
                android:layout_width="0dp"
                android:inputType="phone"
                android:layout_height="match_parent"
                android:layout_weight="6"/>
        </LinearLayout>

        <LinearLayout
            style="@style/hc_ll_transfer_info"
            android:layout_height="@dimen/height_35dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/HCTheme.TextHint.Lable"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/hc_check_time"/>

            <TextView
                android:id="@+id/et_appoint_time"
                style="@style/HCTheme.VehicleSubBlock.Input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"/>
        </LinearLayout>

        <LinearLayout
            style="@style/hc_ll_transfer_info"
            android:layout_height="@dimen/height_35dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/HCTheme.TextHint.Lable"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/hc_check_address"/>

            <AutoCompleteTextView
                android:id="@+id/act_appoint_place"
                style="@style/HCTheme.VehicleSubBlock.Input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:inputType="text"
                android:textCursorDrawable="@null"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_15dp"
            android:text="@string/hc_add_vhicle_source_notes"
            android:textColor="@color/hc_self_gray_hint"
            android:textSize="@dimen/hc_text_size_normal"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1">

        <include layout="@layout/layout_bottom_confirm"/>
    </LinearLayout>

</LinearLayout>