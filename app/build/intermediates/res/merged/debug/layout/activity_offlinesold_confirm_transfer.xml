<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        style="@style/wh_match"
        android:layout_weight="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 转账方式-->
            <include
                layout="@layout/layout_offlinesold_transfer_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- 照片-->
            <include
                layout="@layout/layout_offlinesold_transfer_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        style="@style/wh_mw"
        android:layout_weight="0.1">

        <Button
            android:id="@+id/btn_commit"
            style="@style/hc_transfer_bottom_1"
            android:background="@color/hc_self_red"
            android:padding="@dimen/margin_15dp"
            android:text="@string/hc_offlinesold_transfer_confirm"
            android:textColor="@color/self_white"
            android:textSize="@dimen/font_16"/>
    </LinearLayout>
</LinearLayout>