<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/self_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_height="@dimen/common_titlebar_height"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            style="@style/wh_wrap"
            android:paddingLeft="@dimen/margin_10dp"
            android:src="@drawable/ic_address"
            />

        <TextView
            style="@style/wh_wrap"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:text="在"
            android:textColor="@color/self_grey"/>

        <LinearLayout
            style="@style/wh_wrap"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_city"
                style="@style/hc_et_trans_search"
                android:layout_width="50dp"
                android:layout_height="@dimen/height_35dp"
                android:imeOptions="actionSearch"
                android:textColor="@color/hc_self_red"
                android:textColorHint="@color/self_grey"
                android:textCursorDrawable="@drawable/hc_et_cursor"
                android:textSize="@dimen/font_16"/>

            <View
                style="@style/wh_mw"
                android:layout_height="@dimen/width_0.5dp"
                android:layout_marginTop="@dimen/margin_2dp"
                android:background="@color/self_grey"/>
        </LinearLayout>

        <TextView
            style="@style/wh_wrap"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:text="市内找"
            android:textColor="@color/self_grey"/>

        <LinearLayout
            style="@style/wh_wrap"
            android:layout_marginRight="@dimen/margin_10dp"
            android:orientation="vertical">

            <AutoCompleteTextView
                android:id="@+id/et_search"
                style="@style/hc_et_trans_search"
                android:layout_height="@dimen/height_35dp"
                android:hint="请输入地点"
                android:imeOptions="actionSearch"
                android:textColor="@color/hc_self_red"
                android:textColorHint="@color/self_grey"
                android:textCursorDrawable="@drawable/hc_et_cursor"
                android:textSize="@dimen/font_16"/>

            <View
                style="@style/wh_mw"
                android:layout_height="@dimen/width_0.5dp"
                android:layout_marginTop="@dimen/margin_2dp"
                android:background="@color/self_grey"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>