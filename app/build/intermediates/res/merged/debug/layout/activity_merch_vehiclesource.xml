<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/layout_common_titlebar_search_more"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            style="@style/hc_tv_title"
            android:layout_width="match_parent"
            android:layout_weight="30"
            android:paddingBottom="@dimen/margin_15dp"
            android:paddingTop="@dimen/margin_15dp"
            android:singleLine="true"
            android:text="-------"
            android:textColor="@color/hc_indicator"
            android:textSize="@dimen/margin_16dp"/>

        <TextView
            android:id="@+id/tv_sell_car"
            style="@style/hc_tv_title"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:paddingBottom="@dimen/margin_0dp"
            android:paddingLeft="@dimen/margin_4dp"
            android:paddingRight="@dimen/margin_4dp"
            android:paddingTop="@dimen/margin_0dp"
            android:text="-----"
            android:textColor="@color/red"
            android:textSize="16dp"/>
    </LinearLayout>

    <FrameLayout
        style="@style/wh_match">

    <FrameLayout
        android:id="@+id/fl_content"
        style="@style/wh_match"></FrameLayout>

        <View
            android:id="@+id/view_mask"
            style="@style/wh_match"
            android:visibility="gone"
            android:background="@color/hc_half_black"></View>
    </FrameLayout>
</LinearLayout>