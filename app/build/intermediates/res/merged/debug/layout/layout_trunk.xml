<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        style="@style/tv_fill_exam_report"
        android:text="其他"/>

    <LinearLayout
        android:id="@+id/ll_trunk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:focusable="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/trunk_label"
            style="@style/item_label_normal"
            android:text="后备箱"/>

        <TextView
            android:id="@+id/trunk_status"
            style="@style/item_content_normal"
            android:text="正常"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/self_background"/>

    <LinearLayout
        android:id="@+id/ll_rubber_strip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:focusable="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rubberstrip_label"
            style="@style/item_label_normal"
            android:text="全车胶条"/>

        <TextView
            android:id="@+id/rubberstrip_status"
            style="@style/item_content_normal"
            android:text="正常"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/self_background"/>

    <LinearLayout
        android:id="@+id/ll_vehicle_smell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:focusable="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vehicle_smell_label"
            style="@style/item_label_normal"
            android:text="车内气味"/>

        <TextView
            android:id="@+id/vehicle_smell_status"
            style="@style/item_content_normal"
            android:text="正常"/>
    </LinearLayout>

    <View
        style="@style/view_normal"
        android:layout_height="10dp"/>

</LinearLayout>