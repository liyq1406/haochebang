<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pay_white"
    android:orientation="vertical">

    <include layout="@layout/pay_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="客户电话"
            android:textColor="@color/pay_self_black"
            android:textSize="@dimen/hc_text_size_large" />

        <TextView
            android:id="@+id/tv_balance_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:text="00000000000"
            android:textColor="@color/pay_self_black"
            android:textSize="@dimen/hc_text_size_large" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="可用余额"
            android:textColor="@color/pay_self_black"
            android:textSize="@dimen/hc_text_size_large" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0"
            android:textColor="@color/pay_self_black"
            android:textSize="@dimen/hc_text_size_large" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="元"
            android:textColor="@color/pay_self_black"
            android:textSize="@dimen/hc_text_size_large" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_balance_apply_refund"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_15dp"
        android:background="@drawable/pay_balance_button_bg"
        android:paddingLeft="@dimen/margin_90dp"
        android:paddingRight="@dimen/margin_90dp"
        android:text="申请退款"
        android:textColor="@color/pay_white"
        android:textSize="@dimen/hc_text_size_middle" />

</LinearLayout>