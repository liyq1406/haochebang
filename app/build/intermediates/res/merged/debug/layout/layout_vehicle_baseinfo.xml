<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/self_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/height_10dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/hc_self_gray_bg"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/hc_merchant"
            />

        <TextView
            android:id="@+id/tv_merchant"
            style="@style/hc_tv_desc"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="------"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/hc_merchant_address"
            />

        <TextView
            android:id="@+id/tv_merchant_address"
            style="@style/hc_tv_desc"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="------"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/hc_contact_phone"
            />

        <LinearLayout
            style="@style/wh_wrap"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_label_transfer_add"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_contact_name"
                style="@style/hc_tv_desc"
                android:gravity="right"
                android:text="-----------"/>

            <TextView
                android:id="@+id/tv_contact_phone"
                style="@style/hc_tv_phone"
                android:layout_alignParentRight="true"
                android:padding="@dimen/margin_15dp"
                android:text="----"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>