<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pay_white"
    android:orientation="vertical">

    <include layout="@layout/pay_title_bar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15dp"
        android:text="客户手机"
        android:textColor="@color/pay_self_black"
        android:textSize="@dimen/hc_text_size_large" />

    <EditText
        android:id="@+id/et_balance_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40dp"
        android:layout_marginBottom="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:background="@drawable/pay_shape_common_input_bg"
        android:gravity="left|center_vertical"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="@dimen/margin_9dp"
        android:paddingRight="@dimen/margin_25dp"
        android:textColor="@color/pay_self_black"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_balance_query"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_15dp"
        android:background="@drawable/pay_balance_button_bg"
        android:paddingLeft="@dimen/margin_90dp"
        android:paddingRight="@dimen/margin_90dp"
        android:text="查询"
        android:textColor="@color/pay_white"
        android:textSize="@dimen/hc_text_size_middle" />

</LinearLayout>