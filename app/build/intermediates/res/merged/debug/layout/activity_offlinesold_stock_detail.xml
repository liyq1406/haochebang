              android:orientation="vertical">

    <ScrollView
        style="@style/wh_match"
        android:layout_weight="10">

        <LinearLayout
            style="@style/wh_match"
            android:orientation="vertical">

            <include layout="@layout/layout_purchase_task_title"/>

            <include layout="@layout/layout_offlinesold_stock_baseinfo"/>

            <View
                style="@style/wh_match"
                android:layout_height="@dimen/height_10dp"/>

            <include layout="@layout/layout_offlinesold_stock_regist"/>

            <View
                style="@style/wh_match"
                android:layout_height="@dimen/height_10dp"/>

            <include layout="@layout/layout_offlinesold_stock_btn"/>
