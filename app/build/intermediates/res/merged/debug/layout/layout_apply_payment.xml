<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/self_white"
    android:orientation="vertical">

    <LinearLayout
        style="@style/hc_ll_transfer_info"
        android:layout_height="@dimen/height_35dp"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/HCTheme.TextHint.Lable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/hc_household_name"/>

        <EditText
            android:id="@+id/ed_household_name"
            style="@style/HCTheme.VehicleSubBlock.Input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:inputType="text"
            android:paddingRight="@dimen/margin_25dp"/>
    </LinearLayout>

    <LinearLayout
        style="@style/hc_ll_transfer_info"
        android:layout_height="@dimen/height_35dp"
        android:orientation="horizontal" >
        <TextView
            style="@style/HCTheme.TextHint.Lable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/hc_receipt_account"/>
       <RelativeLayout
           android:layout_width="0dp"
           android:layout_weight="2"
           android:layout_height="match_parent">
           <com.haoche51.checker.widget.ClearableEditText
               android:id="@+id/ed_receipt_account"
               style="@style/HCTheme.VehicleSubBlock.Input"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:inputType="number"
               android:maxLength="30"
               android:paddingRight="@dimen/margin_40dp"/>

           <ImageView
               android:id="@+id/iv_camera"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:layout_marginRight="10dp"
               android:src="@drawable/ic_camera"/>
       </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/hc_ll_transfer_info"
        android:layout_height="@dimen/height_35dp"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/HCTheme.TextHint.Lable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/hc_deposit_bank"/>

        <EditText
            android:id="@+id/ed_deposit_bank"
            style="@style/HCTheme.VehicleSubBlock.Input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:hint="@string/deposit_bank_hint"
            android:inputType="text"
            android:paddingRight="@dimen/margin_25dp"
            android:textColorHint="@color/hc_self_gray_hint"/>
    </LinearLayout>

    <LinearLayout
        style="@style/hc_ll_transfer_info"
        android:layout_height="@dimen/height_35dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/HCTheme.TextHint.Lable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/payment_for"/>

        <EditText
            android:id="@+id/ed_pay_reason"
            style="@style/HCTheme.VehicleSubBlock.Input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:hint="@string/payment_for_hint"
            android:inputType="text"
            android:paddingRight="@dimen/margin_25dp"
            android:textColorHint="@color/hc_self_gray_hint"/>
    </LinearLayout>
</LinearLayout>