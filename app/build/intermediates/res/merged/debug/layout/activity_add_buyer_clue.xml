<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        style="@style/wh_mw"
        android:layout_alignParentTop="true"
        android:focusableInTouchMode="true"
        android:background="@color/self_white"
        android:orientation="vertical">

        <include layout="@layout/layout_addbuyer_lead_phone"/>
        <include layout="@layout/layout_add_buyer_clue_city"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_10dp"/>

        <include layout="@layout/layout_addbuyer_lead_commment"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_10dp"/>
    </LinearLayout>

    <LinearLayout
        style="@style/wh_mw"
        android:layout_alignParentBottom="true">

        <include layout="@layout/layout_bottom_confirm"/>
    </LinearLayout>

</RelativeLayout>
