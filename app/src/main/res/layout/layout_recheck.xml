<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/self_white"
              android:orientation="vertical">

    <ScrollView
        style="@style/wh_match"
        android:layout_weight="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/self_white"
            android:orientation="vertical">

            <LinearLayout
                style="@style/hc_ll_transfer_info"
                android:layout_height="@dimen/height_35dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/HCTheme.TextHint.Lable"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/hc_recheck_time"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical|left">

                    <TextView
                        android:id="@+id/tv_recheck_time"
                        style="@style/HCTheme.VehicleSubBlock.Spinner"
                        android:entries="@array/filter_vehicle_source_online"
                        android:gravity="center"
                        />

                    <ImageView
                        style="@style/wh_wrap"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_5dp"
                        android:src="@drawable/ic_hc_spinner_arrow"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/hc_ll_transfer_info"
                android:layout_height="@dimen/height_35dp"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/HCTheme.TextHint.Lable"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/hc_recheck_place"/>

                <EditText
                    android:id="@+id/ed_recheck_place"
                    style="@style/HCTheme.VehicleSubBlock.Input"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:inputType="text"
                    android:paddingRight="@dimen/margin_25dp"/>
            </LinearLayout>

            <LinearLayout
                style="@style/hc_ll_transfer_info"
                android:layout_height="@dimen/height_35dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/HCTheme.TextHint.Lable"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/hc_recheck_person"/>

                <TextView
                    android:id="@+id/tv_recheck_person"
                    style="@style/HCTheme.VehicleSubBlock.Input"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:inputType="text"
                    android:paddingRight="@dimen/margin_25dp"/>
            </LinearLayout>

            <LinearLayout
                style="@style/hc_ll_transfer_info"
                android:layout_height="@dimen/height_35dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/HCTheme.TextHint.Lable"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/hc_vehicle_type"/>

                <TextView
                    android:id="@+id/tv_vehicle_type"
                    style="@style/HCTheme.VehicleSubBlock.Input"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:inputType="text"
                    android:paddingRight="@dimen/margin_25dp"
                    android:textColorHint="@color/hc_self_gray_hint"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>