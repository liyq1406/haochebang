<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/layout_common_titlebar_search_more_filter"/>

    <!--展示内容-->
    <FrameLayout
        style="@style/wh_match">

        <com.haoche51.checker.widget.HCSmartTabLayout
            android:id="@+id/content_view"
            style="@style/wh_match">
        </com.haoche51.checker.widget.HCSmartTabLayout>

        <View
            android:id="@+id/view_mask"
            style="@style/wh_match"
            android:background="@color/hc_half_black"
            android:visibility="gone">
        </View>

        <!--筛选内容-->
        <FrameLayout
            android:id="@+id/fl_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/margin_80dp">
        </FrameLayout>
    </FrameLayout>

</LinearLayout>