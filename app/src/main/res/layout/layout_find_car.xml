<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/self_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        >

        <TextView
            android:id="@+id/tv_buyer_name"
            style="@style/hc_tv_buyer_name"
            android:layout_centerVertical="true"
            android:text="---"
            />

        <TextView
            android:id="@+id/tv_buyer_phone"
            style="@style/hc_tv_phone"
            android:layout_toRightOf="@id/tv_buyer_name"
            android:layout_centerVertical="true"
            android:text="----"/>

        <TextView
            android:id="@+id/tv_status"
            style="@style/hc_tv_status"
            android:layout_toRightOf="@id/tv_buyer_phone"
            android:layout_centerVertical="true"
            android:text="---"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/hc_self_gray_bg"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_label_transfer_time"
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/hc_car_class"
            />

        <TextView
            android:id="@+id/tv_vehicle"
            style="@style/hc_tv_desc"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_label_transfer_time"
            android:gravity="right"
            android:text="------"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_label_transfer_add"
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/hc_car_price"
            />

        <TextView
            android:id="@+id/tv_price"
            style="@style/hc_tv_desc"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_label_transfer_add"
            android:gravity="right"
            android:text="-----------"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_label_transfer_status"
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/hc_car_age"
            />

        <TextView
            android:id="@+id/tv_age"
            style="@style/hc_tv_desc"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_label_transfer_status"
            android:gravity="right"
            android:text="-----------"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_gearbox_label"
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/vehicle_subscribe_condition_transmission_lable"
            />

        <TextView
            android:id="@+id/tv_gearbox"
            style="@style/hc_tv_desc"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_gearbox_label"
            android:gravity="right"
            android:text="-----------"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_color_label"
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/vehicle_subscribe_condition_color_lable"
            />

        <TextView
            android:id="@+id/tv_color"
            style="@style/hc_tv_desc"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_color_label"
            android:gravity="right"
            android:text="-----------"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_other_label"
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/other"
            />

        <TextView
            android:id="@+id/tv_other"
            style="@style/hc_tv_desc"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_other_label"
            android:gravity="right"
            android:text="-----------"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/hc_self_gray_bg"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        >

        <TextView
            style="@style/hc_tv_title"
            android:layout_alignParentLeft="true"
            android:text="@string/hc_e_saler"
            />

        <TextView
            android:id="@+id/tv_e_saler"
            style="@style/hc_tv_desc"
            android:layout_toLeftOf="@+id/tv_saler_phone"
            android:gravity="right"
            android:text="------"/>

        <TextView
            android:id="@id/tv_saler_phone"
            style="@style/hc_tv_saler_phone"
            android:layout_alignParentRight="true"
            android:text="----"/>
    </RelativeLayout>

</LinearLayout>