<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/wh_mw"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/self_white"
    android:orientation="vertical">

    <LinearLayout
        style="@style/wh_mw"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_3dp"
        android:paddingTop="@dimen/margin_10dp"
        >

        <TextView
            android:id="@+id/tv_position"
            style="@style/hc_hostling_add_item"
            android:text="--"
            />

        <EditText
            android:id="@+id/tv_project_name"
            style="@style/HCTheme.VehicleSubBlock.Input"
            android:layout_marginLeft="@dimen/height_10dp"
            android:layout_weight="5"
            android:layout_height="@dimen/height_35dp"
            android:gravity="left|center_vertical"
            android:hint="@string/hc_hostling_add_item_name"
            android:textColorHint="@color/self_grey"
            />

        <EditText
            android:id="@+id/tv_project_fee"
            style="@style/HCTheme.VehicleSubBlock.Input"
            android:layout_marginLeft="@dimen/height_10dp"
            android:layout_height="@dimen/height_35dp"
            android:layout_weight="4"
            android:gravity="left|center_vertical"
            android:hint="@string/hc_hostling_add_item_price"
            android:maxLength="10"
            android:inputType="number"
            android:textColorHint="@color/self_grey"
            />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/margin_25dp"
            android:layout_height="@dimen/margin_25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:src="@drawable/delete_photo"/>
    </LinearLayout>

    <com.haoche51.checker.widget.HCNoScrollGridView
        android:id="@+id/list_gridview"
        style="@style/wh_mw"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/margin_40dp"
        android:horizontalSpacing="@dimen/margin_5dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/margin_5dp">
    </com.haoche51.checker.widget.HCNoScrollGridView>
</LinearLayout>