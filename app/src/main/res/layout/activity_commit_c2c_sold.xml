<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <ScrollView
        style="@style/wh_match"
        android:layout_weight="20">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/self_white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title"
                    style="@style/hc_tv_title"
                    android:layout_width="match_parent"
                    android:layout_weight="30"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:paddingTop="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:text="---"
                    android:textColor="@color/hc_self_black"
                    android:textSize="@dimen/margin_16dp"/>

                <LinearLayout
                    style="@style/hc_ll_transfer_info"
                    android:layout_height="@dimen/height_35dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        style="@style/HCTheme.TextHint.Lable"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/hc_buyer_name"/>

                    <EditText
                        android:id="@+id/ed_buyer_name"
                        style="@style/HCTheme.VehicleSubBlock.Input"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:inputType="text"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/hc_ll_transfer_info"
                    android:layout_height="@dimen/height_35dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/HCTheme.TextHint.Lable"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/hc_buyer_phone"/>

                    <EditText
                        android:id="@+id/ed_buyer_phone"
                        style="@style/HCTheme.VehicleSubBlock.Input"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:focusableInTouchMode="true"
                        android:hint="@string/hc_phone_remark"
                        android:inputType="phone"
                        android:paddingLeft="3dp"
                        android:textColorHint="@color/hc_self_gray_hint"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/hc_ll_transfer_info"
                    android:layout_height="@dimen/height_35dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/HCTheme.TextHint.Lable"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/hc_sell"/>

                    <TextView
                        android:id="@+id/tv_seller"
                        style="@style/HCTheme.VehicleSubBlock.Input"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingRight="@dimen/margin_25dp"/>
                </LinearLayout>
            </LinearLayout>
    </ScrollView>

    <LinearLayout
        style="@style/wh_mw"
        android:layout_weight="0.1">

        <Button
            android:id="@+id/btn_commit"
            style="@style/hc_transfer_bottom_1"
            android:background="@color/hc_self_red"
            android:padding="@dimen/margin_15dp"
            android:text="@string/hc_commit"
            android:textColor="@color/self_white"
            android:textSize="@dimen/font_16"/>
    </LinearLayout>
</LinearLayout>