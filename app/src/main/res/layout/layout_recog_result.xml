<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/self_white"
    android:orientation="vertical" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/hc_self_gray"
        android:padding="15dp"
        android:textSize="@dimen/hc_text_size_middle"
        android:text="请确认卡号信息，如有错误请立即更改"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:scaleType="fitStart" />
        <LinearLayout
            style="@style/hc_ll_transfer_info"
            android:layout_height="@dimen/height_35dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/ed_bank_01"
                style="@style/HCTheme.VehicleSubBlock.Input"
                android:layout_marginRight="5dp"
                android:inputType="number"
                android:maxLength="4"
                android:singleLine="true"/>
            <EditText
                android:id="@+id/ed_bank_02"
                style="@style/HCTheme.VehicleSubBlock.Input"
                android:layout_marginRight="5dp"
                android:inputType="number"
                android:maxLength="4"
                android:singleLine="true"/>
            <EditText
                android:id="@+id/ed_bank_03"
                style="@style/HCTheme.VehicleSubBlock.Input"
                android:layout_marginRight="5dp"
                android:inputType="number"
                android:maxLength="4"
                android:singleLine="true"/>
            <EditText
                android:id="@+id/ed_bank_04"
                style="@style/HCTheme.VehicleSubBlock.Input"
                android:layout_marginRight="5dp"
                android:inputType="number"
                android:maxLength="4"
                android:singleLine="true"/>
            <EditText
                android:id="@+id/ed_bank_05"
                style="@style/HCTheme.VehicleSubBlock.Input"
                android:layout_marginRight="5dp"
                android:inputType="number"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            style="@style/hc_ll_transfer_info"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bank_tip"
                android:textColor="@color/hc_self_gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:lines="3"
                android:text="@string/bank_tip_content"
                android:textColor="@color/hc_self_gray"/>

        </LinearLayout>


    <ImageView
        android:id="@+id/img_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside" />
</LinearLayout>