<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        style="@style/tv_fill_exam_report"
        android:text="轮胎"/>

    <View style="@style/view_normal"/>

    <LinearLayout
        android:id="@+id/ll_tire_uni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:focusable="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tire_uniformity_label"
            style="@style/item_label_normal"
            android:text="轮胎一致性"/>

        <TextView
            android:id="@+id/tire_uniformity"
            style="@style/item_content_normal"
            android:text="正常"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/self_background"/>

    <LinearLayout
        android:id="@+id/ll_tread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:focusable="false"
        android:orientation="horizontal">

        <TextView
            style="@style/item_label_normal"
            android:text="胎纹"/>

        <TextView
            android:id="@+id/tread"
            style="@style/item_content_normal"
            android:text="1|1|1|1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/self_background"/>

    <LinearLayout
        android:id="@+id/ll_tire_stat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:focusable="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tire_status_label"
            style="@style/item_label_normal"
            android:text="备胎"/>

        <TextView
            android:id="@+id/tire_status"
            style="@style/item_content_normal"
            android:text="无"/>
    </LinearLayout>

    <View
        style="@style/view_normal"
        android:layout_height="10dp"/>
</LinearLayout>