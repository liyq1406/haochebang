<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_common_titlebar"/>

    <include layout="@layout/layout_second_hand_car"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="15dp"
        >

        <com.haoche51.checker.custom.HCPullToRefresh
            android:id="@+id/pull_to_refresh"
            style="@style/wh_match"
            android:background="@color/self_white"
            android:clickable="false"/>

        <FrameLayout
            android:id="@+id/fl_condition"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:visibility="gone"
            >

        </FrameLayout>
    </FrameLayout>
</LinearLayout>