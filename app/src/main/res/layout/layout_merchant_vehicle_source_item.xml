<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hc_self_white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <!--待跟进列表Item-->
    <!--app:cardElevation="0px"设置后不会有阴影效果-->
    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/self_white"
        app:cardElevation="0px"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/hc_tv_title"
                    android:layout_width="match_parent"
                    android:layout_weight="30"
                    android:paddingBottom="@dimen/margin_15dp"
                    android:paddingTop="@dimen/margin_15dp"
                    android:singleLine="true"
                    android:text="-------"
                    android:textColor="@color/hc_self_black"
                    android:textSize="@dimen/margin_16dp"/>

                <TextView
                    android:id="@+id/tv_status"
                    style="@style/hc_tv_title"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:paddingBottom="@dimen/margin_0dp"
                    android:paddingLeft="@dimen/margin_4dp"
                    android:paddingRight="@dimen/margin_4dp"
                    android:paddingTop="@dimen/margin_0dp"
                    android:text="-----"
                    android:textColor="@color/red"
                    android:textSize="16dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/self_empty"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_5dp">

                <ImageView
                    android:id="@+id/iv_cover_img"
                    android:layout_width="105dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/default_template"
                    android:layout_marginTop="13dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_item_check_seller_name"
                            style="@style/hc_tv_title"
                            android:layout_alignParentLeft="true"
                            android:paddingBottom="@dimen/height_10dp"
                            android:paddingLeft="@dimen/margin_15dp"
                            android:paddingRight="@dimen/margin_15dp"
                            android:paddingTop="@dimen/height_10dp"
                            android:text="编号"
                            android:textSize="@dimen/hc_text_size_normal"/>

                        <TextView
                            android:id="@+id/tv_id"
                            style="@style/hc_tv_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="----"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/hc_tv_title"
                            android:layout_alignParentLeft="true"
                            android:paddingBottom="@dimen/height_10dp"
                            android:paddingLeft="@dimen/margin_15dp"
                            android:paddingRight="@dimen/margin_15dp"
                            android:paddingTop="@dimen/height_10dp"
                            android:text="价格"
                            android:textSize="@dimen/hc_text_size_normal"/>

                        <TextView
                            android:id="@+id/tv_price"
                            style="@style/hc_tv_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="----"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/hc_tv_title"
                            android:layout_alignParentLeft="true"
                            android:paddingBottom="@dimen/height_10dp"
                            android:paddingLeft="@dimen/margin_15dp"
                            android:paddingRight="@dimen/margin_15dp"
                            android:paddingTop="@dimen/height_10dp"
                            android:text="更新"
                            android:textSize="@dimen/hc_text_size_normal"/>

                        <TextView
                            android:id="@+id/tv_up_time"
                            style="@style/hc_tv_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="----"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>