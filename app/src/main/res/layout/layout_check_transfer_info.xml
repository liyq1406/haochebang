<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/wh_mw"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/height_10dp"
    android:background="@color/self_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/hc_tv_title.low"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/margin_20dp"
            android:text="@string/p_appoint_comment"
            android:textColor="@color/hc_self_black"
            android:textSize="@dimen/hc_text_size_normal"/>

        <TextView
            android:id="@+id/tv_content_max_input_count"
            style="@style/hc_tv_desc.low"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_5dp"
            android:gravity="right"
            android:singleLine="true"
            android:text="100"
            android:textColor="@color/hc_self_gray_hint"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/ed_final_comment"
        style="@style/hc_ed_quit_buy"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:background="@drawable/shape_common_input_bolck_bg"
        />
</LinearLayout>