<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/self_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_pay_progress"
        style="@style/tv_pay_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="--"/>

    <ProgressBar
        android:id="@+id/pb_pay_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:max="10000"
        android:progressDrawable="@drawable/progressbar_green"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_pay_stat"
                android:layout_width="13dp"
                android:layout_height="13dp"/>

            <TextView
                android:id="@+id/tv_pay_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="--"
                android:textSize="14dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_reject_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="--"
            android:textSize="14dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/hc_self_gray_bg"
        />
</LinearLayout>