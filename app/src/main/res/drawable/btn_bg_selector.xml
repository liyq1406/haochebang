<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/self_white"/>
            <padding android:bottom="1dp" android:left="10dp" android:right="10dp" android:top="1dp"/>
            <stroke android:width="0.5dp" android:color="@color/hc_indicator">
            </stroke>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/hc_indicator"/>
            <padding android:bottom="1dp" android:left="5dp" android:right="5dp" android:top="1dp"/>
            <stroke android:width="0.5dp" android:color="@color/hc_indicator"/>
        </shape>
    </item>

</selector>
